# ğŸš€ Initialize Git in current folder
git_init_here() {
  if [ -d ".git" ]; then
    echo "ğŸ“‚ Already a Git repository."
  else
    git init
    touch README.md
    git add README.md
    git commit -m "Initial commit"
    echo "âœ… Git initialized with README.md"
  fi
}

# ğŸ”§ Setup Git remote
git_add_remote() {
  read -p "ğŸ”— Enter remote repo SSH/HTTPS URL: " url
  git remote add origin "$url"
  echo "âœ… Remote 'origin' set to: $url"
}

# ğŸŒ¿ Create and switch to a new branch
git_new_branch() {
  read -p "ğŸŒ¿ New branch name: " branch
  git checkout -b "$branch"
  echo "âœ… Switched to branch '$branch'"
}

# ğŸš€ Push current branch to origin
git_push_origin() {
  branch=$(git symbolic-ref --short HEAD)
  git push -u origin "$branch"
  echo "ğŸ“¤ Pushed branch '$branch' to origin."
}

# git configure
git_help_configure() {
  read -p "ğŸ“ Enter your full name: " name
  read -p "ğŸ“§ Enter your Git email: " email

  git config --global user.name "$name"
  git config --global user.email "$email"
  git config --global init.defaultBranch main
  git config --global core.editor nano
  git config --global color.ui auto

  echo "âœ… Git configured with:"
  echo "   Name:  $name"
  echo "   Email: $email"
}

gcommit() {
  if [[ -z "$1" ]]; then
    read -p "ğŸ’¬ Enter commit message: " msg
  else
    msg="$1"
  fi

  git add .
  git commit -m "$msg"
  echo "âœ… Committed: '$msg'"
}