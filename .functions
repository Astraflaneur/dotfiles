gen_ssh_key() {
  local email="${1:-sagar.barad@niser.ac.in}"  # default email
  local key_file="$HOME/.ssh/id_ed25519"


  echo "ğŸ”§ Generating new SSH key for $email..."
  ssh-keygen -t ed25519 -C "$email" -f "$key_file" -N ""
  eval "$(ssh-agent -s)"
  ssh-add "$key_file"
  echo "âœ… SSH key generated."
  

  echo "ğŸ“‹ Public Key:"
  echo "--------------------------------------------------"
  cat "$key_file.pub"
  echo "--------------------------------------------------"
  echo "ğŸ“ You can now paste this key to GitHub â†’ https://github.com/settings/keys"
}

copy_ssh_key() {
  local email="${1:-sagar.barad@niser.ac.in}"  # default email
  local key_file="$HOME/.ssh/id_ed25519"

  if [[ -f "$key_file" ]]; then
    echo "ğŸ”‘ SSH key already exists at $key_file"
    
    echo "ğŸ“‹ Public Key:"
    echo "--------------------------------------------------"
    cat "$key_file.pub"
    echo "--------------------------------------------------"
    echo "ğŸ“ You can now paste this key to GitHub â†’ https://github.com/settings/keys"
  else
    echo "âŒ xclip not found or SSH key doesn't exist."
  fi
}

